<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>

    <!-- Plugin-Metadaten (optional, aber nice) -->
    <Product>Ethereum Payments</Product>
    <Description>Accept ETH and ERC-20 tokens (USDT, dEURO) on Ethereum Mainnet.</Description>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <!-- WICHTIG: KEINE ProjectReference mehr auf ../btcpayserver/... -->
  <ItemGroup>
    <!-- BTCPay Kern-APIs als NuGet (Version ungefÃ¤hr an deine BTCPay-Server-Version anpassen) -->
    <PackageReference Include="BTCPayServer.Abstractions" Version="1.13.*" />
    <PackageReference Include="BTCPayServer.Client" Version="1.13.*" />
    <PackageReference Include="BTCPayServer" Version="1.13.*" />
  </ItemGroup>

  <!-- Ethereum / Nethereum Dependencies -->
  <ItemGroup>
    <PackageReference Include="Nethereum.Web3" Version="4.19.0" />
    <PackageReference Include="Nethereum.Contracts" Version="4.19.0" />
    <PackageReference Include="Nethereum.RPC" Version="4.19.0" />
    <PackageReference Include="Nethereum.Util" Version="4.19.0" />
    <PackageReference Include="Nethereum.Hex" Version="4.19.0" />
  </ItemGroup>

  <!-- Razor Views einbetten -->
  <ItemGroup>
    <EmbeddedResource Include="Views\**\*.cshtml" />
  </ItemGroup>
</Project>
